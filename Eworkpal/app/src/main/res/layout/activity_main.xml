<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@color/colorPrimary"
            app:expandedTitleMarginStart="100dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="@android:color/transparent"
            app:titleEnabled="false">

            <RelativeLayout
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7"
                android:background="@mipmap/ic_user_login_background"
                android:layout_width="wrap_content"
                android:layout_height="1200px">

                <!--<ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_user_login_background"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.6"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:textSize="30px"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_user_rectangle"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="38px"/>

                    <TextView
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="注册新企业"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:textColor="@color/gray_757588"
                        android:textSize="30px"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_user_triangle"
                        android:layout_alignParentBottom="true"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_user_triangle"
                        android:visibility="invisible"
                        android:layout_alignParentBottom="true"/>

                </LinearLayout>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title=""/>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginTop="80px"
            android:layout_marginLeft="30px"
            android:paddingLeft="50px"
            android:drawableLeft="@mipmap/ic_user_account"
            android:drawablePadding="54px"
            android:inputType="number"
            android:textColorHint="@color/gray_666666"
            android:textSize="28px"
            android:hint="手机号"
            android:textColor="@color/gray_666666"
            android:background="@drawable/rectangle_27dp_white"
            android:layout_marginRight="30px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="30px"
            android:paddingLeft="50px"
            android:textColorHint="@color/gray_666666"
            android:textSize="28px"
            android:hint="密码"
            android:drawableLeft="@mipmap/ic_user_password"
            android:drawablePadding="54px"
            android:inputType="textPassword"
            android:textColor="@color/gray_666666"
            android:background="@drawable/rectangle_27dp_white"
            android:layout_marginRight="30px"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="30px"
            android:paddingLeft="50px"
            android:textColorHint="@color/gray_666666"
            android:textSize="28px"
            android:hint="密码"
            android:drawableLeft="@mipmap/ic_user_password"
            android:drawablePadding="54px"
            android:inputType="textPassword"
            android:textColor="@color/gray_666666"
            android:background="@drawable/rectangle_27dp_white"
            android:layout_marginRight="30px"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:textColor="@android:color/white"
            android:textSize="30px"
            android:layout_marginTop="40px"
            android:gravity="center"
            android:background="@drawable/rectangle_27dp_blue_selected"
            android:text="登录"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textSize="24px"
            android:layout_gravity="center"
            android:textColor="@color/gray_999999"
            android:layout_marginTop="30px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请加入企业"
            android:textSize="30px"
            android:textColor="@color/blue_85B2F6"
            android:layout_gravity="center"
            android:layout_marginTop="40px"/>

    </LinearLayout>


    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="-80dp"
        android:alpha="0"
        android:elevation="10dp"
        android:gravity="center_vertical"
        android:text="用户登录"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_behavior="@string/simple_view_behavior"
        app:svb_dependOn="@id/appbar"
        app:svb_dependType="y"
        app:svb_targetAlpha="1"
        app:svb_targetY="0dp"/>

</android.support.design.widget.CoordinatorLayout>