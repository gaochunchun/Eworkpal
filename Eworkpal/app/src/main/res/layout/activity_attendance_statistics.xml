<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white_F7F9FC">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264px"
        android:background="@color/blue_85B2F6"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="122px"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60px"
                android:layout_height="60px"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:background="@color/orangey_F5A623"
                android:gravity="center"
                android:text="曹操"
                android:textColor="@color/white"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="曹操"
                android:textColor="@color/white"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="70px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24小时"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="调休额度"
                        android:textColor="@color/gray_CCCCCC"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="44px"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24小时"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="年假额度"
                        android:textColor="@color/gray_CCCCCC"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/white_9ABEF5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:textColor="@color/gray_CCCCCC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017年"/>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_marginTop="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02月"/>
                </LinearLayout>
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_attendance_down_arrow"/>
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/gray_CCCCCC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应出勤天数"/>
                <TextView
                    android:textColor="@color/white"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21天"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:textColor="@color/gray_CCCCCC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出勤天数"/>
                <TextView
                    android:textColor="@color/white"
                    android:layout_marginTop="20px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="21天"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black_4A4A4A"
            android:text="迟到"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/late_tv"
            android:textColor="@color/red_E14072"
            android:text="10次"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@mipmap/ic_attendance_backslashes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/black_4A4A4A"
            android:text="早退"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/leave_early_tv"
            android:text="10次"
            android:textColor="@color/red_E14072"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black_4A4A4A"
            android:text="未签到"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <TextView
            android:textColor="@color/black_868686"
            android:text="0次"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/un_sign_in_tv"/>

        <ImageView
            android:src="@mipmap/ic_attendance_backslashes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/black_4A4A4A"
            android:text="未签退"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/un_sign_out_tv"
            android:textColor="@color/red_E14072"
            android:text="10次"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10px"
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/black_4A4A4A"
            android:text="外勤"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/field_tv"
            android:textColor="@color/red_E14072"
            android:text="10次"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:src="@mipmap/ic_attendance_backslashes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/black_4A4A4A"
            android:text="设备异常"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/equipment_abnorma_tv"
            android:textColor="@color/red_E14072"
            android:text="10次"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <TextView
        android:layout_marginLeft="20px"
        android:text="统计"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="70px"/>


    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/black_4A4A4A"
            android:text="请假"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
           />

        <TextView
            android:id="@+id/leave_tv"
            android:textColor="@color/black_4A4A4A"
            android:text="3次"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="invisible"
            android:src="@mipmap/ic_attendance_backslashes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/orangey_F5A623"
            android:text="23小时 (2.4天)"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="1px"
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:orientation="horizontal">

        <TextView

            android:textColor="@color/black_4A4A4A"
            android:text="加班"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            />

        <TextView
            android:id="@+id/over_time_tv"
            android:textColor="@color/black_4A4A4A"
            android:text="3次"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="invisible"
            android:src="@mipmap/ic_attendance_backslashes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/orangey_F5A623"
            android:text="23小时 (2.4天)"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1px"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/black_4A4A4A"
            android:text="出差"
            android:gravity="center_vertical|right"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/textView4"/>

        <TextView
            android:id="@+id/business_travel_tv"
            android:textColor="@color/black_4A4A4A"
            android:text="3次"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:visibility="invisible"
            android:src="@mipmap/ic_attendance_backslashes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:textColor="@color/orangey_F5A623"
            android:text="23小时 (2.4天)"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>