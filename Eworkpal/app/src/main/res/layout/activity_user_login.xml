<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="620px"
        android:background="@mipmap/ic_user_login_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableBottom="@mipmap/ic_user_triangle"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:drawablePadding="30px"
            android:layout_toLeftOf="@+id/aa"/>

        <ImageView
            android:id="@+id/aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_user_rectangle"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38px"/>

        <TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_toLeftOf="@+id/aa"/>
        </LinearLayout>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginTop="80px"
        android:layout_marginLeft="30px"
        android:paddingLeft="50px"
        android:drawableLeft="@mipmap/ic_user_account"
        android:drawablePadding="54px"
        android:textColorHint="@color/black66"
        android:textSize="16sp"
        android:hint="ddddd"
        android:background="@drawable/rectangle_30dp_gray"
        android:layout_marginRight="30px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        android:paddingLeft="50px"
        android:textColorHint="@color/black66"
        android:textSize="16sp"
        android:hint="ddd"
        android:drawableLeft="@mipmap/ic_user_password"
        android:drawablePadding="54px"
        android:background="@drawable/rectangle_30dp_gray"
        android:layout_marginRight="30px"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="96px"
        android:layout_marginRight="30px"
        android:layout_marginLeft="30px"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_marginTop="40px"
        android:gravity="center"
        android:background="@drawable/rectangle_30dp_blue85"
        android:text="登录"/>


</LinearLayout>
