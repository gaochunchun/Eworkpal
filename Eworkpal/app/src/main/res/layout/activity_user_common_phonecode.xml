<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_F7F9FC"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginTop="80px"
            android:background="@drawable/rectangle_27dp_white"
            android:hint="@string/text_please_enter_your_phone_number"
            android:inputType="number"
            android:paddingLeft="50px"
            android:textColor="@color/gray_666666"
            android:textColorHint="@color/gray_666666"
            android:textSize="28px" />

        <RelativeLayout
            android:id="@+id/rl_picture_code_layout"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginTop="40px"
            android:visibility="gone">

            <EditText
                android:id="@+id/et_picture_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_27dp_white"
                android:hint="@string/text_please_enter_the_verification_code"
                android:inputType="textVisiblePassword"
                android:paddingLeft="50px"
                android:textColor="@color/gray_666666"
                android:textColorHint="@color/gray_666666"
                android:textSize="28px" />

            <LinearLayout
                android:layout_width="238px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/rectangle_27dp_white"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_picture_code"
                    android:layout_width="234px"
                    android:layout_height="79px" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginTop="40px">

            <EditText
                android:id="@+id/et_phone_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_27dp_white"
                android:hint="@string/text_please_enter_the_verification_code"
                android:inputType="number"
                android:paddingLeft="50px"
                android:textColor="@color/gray_666666"
                android:textColorHint="@color/gray_666666"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="238px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/rectangle_27dp_blue"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/text_get_verification_code"
                android:textColor="@color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_getcode_next"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginTop="50px"
            android:background="@drawable/rectangle_27dp_blue"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/text_next"
            android:textColor="@android:color/white"
            android:textSize="30px" />
    </LinearLayout>
</LinearLayout>